.container {
  padding: 32rpx;
  background-color: #f5f5f5;
  box-sizing: border-box;
  width: 100%;
  min-height: calc(100vh + 1200rpx);
  display: flex;
  flex-direction: column;
  gap: 0;
}

.edit-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx 60rpx 60rpx 60rpx;
  width: 100%;
  box-sizing: border-box;
  min-height: 360rpx;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

/* 使用组合选择器设置相邻edit-section之间的间距 */
.edit-section + .edit-section {
  margin-top: 15rpx;
}

/* 最后一个section不需要分隔线，但需要更大的底部间距 */
.edit-section:last-child {
  margin-bottom: 320rpx;
  border-bottom: none;
}

.edit-section-hover {
  background: #fafafa;
}

.section-header {
  margin-bottom: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-content {
  width: 100%;
  padding: 12rpx 0;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 16rpx;
}

.form-item:last-child {
  margin-bottom: 0;
  border-bottom: none;
}

.label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.input-focus {
  color: #1989fa;
}

.textarea {
  width: 100%;
  min-height: 240rpx;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.textarea-focus {
  color: #1989fa;
}

.skills-input {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.add-btn {
  margin-left: 24rpx;
  padding: 12rpx 32rpx;
  background: #1989fa;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.add-btn-hover {
  opacity: 0.8;
}

.skills-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 16rpx 0;
}

.skill-tag {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.skill-tag-hover {
  background: #e8e8e8;
}

.delete-btn {
  margin-left: 12rpx;
  color: #999;
  font-size: 32rpx;
}

.delete-btn-hover {
  color: #666;
}

.save-btn {
  position: fixed;
  bottom: 48rpx;
  left: 32rpx;
  right: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #1989fa;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  box-shadow: 0 8rpx 16rpx rgba(25, 137, 250, 0.2);
}

.save-btn-hover {
  opacity: 0.8;
}

.scrollarea {
  height: 100vh;
  background: #f5f5f5;
  padding-bottom: 720rpx;
}

.avatar-content {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

