/**edit.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f7fa;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  width: 100%;
  min-height: 100vh; /* 保证内容少时也撑满屏幕 */
  box-sizing: border-box;
  
}

.container {
  padding: 30rpx;
  max-width: 800rpx;
  margin: 0 auto;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  /*padding-bottom: 620rpx;*/
}

.edit-section,
.form-item {
  box-sizing: border-box;
}

.section-content {
  width: 100%;
  box-sizing: border-box;
}

.edit-section {
  width: 100%;
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.edit-section:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f4ff;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 36rpx;
  background: #4A90E2;
  border-radius: 4rpx;
}

.edit-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f0f4ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-btn .iconfont {
  color: #4A90E2;
  font-size: 32rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
  position: relative;
  width: 100%;
}

.label {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
  font-weight: 500;
}

.input {
  width: 100%;
  min-height: 90rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
  border: 2rpx solid transparent;
  box-sizing: border-box;
}

.input:focus {
  border-color: #4A90E2;
  background: #fff;
  box-shadow: 0 0 0 4rpx rgba(74, 144, 226, 0.1);
}

.textarea {
  width: 100%;
  height: 240rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 30rpx;
  font-size: 30rpx;
  color: #333;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  line-height: 1.6;
  box-sizing: border-box; /* 关键！防止溢出 */
}

.textarea:focus {
  border-color: #4A90E2;
  background: #fff;
  box-shadow: 0 0 0 4rpx rgba(74, 144, 226, 0.1);
}

.skills-input {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.skills-input .input {
  flex: 1;
}

.add-btn {
  width: 140rpx;
  height: 90rpx;
  background: #4A90E2;
  color: #fff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.add-btn:active {
  transform: scale(0.95);
  background: #3a7bc8;
}

.skills-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.skill-tag {
  background: #f0f4ff;
  color: #4A90E2;
  padding: 16rpx 36rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 10rpx;
  transition: all 0.3s ease;
}

.skill-tag:active {
  background: #4A90E2;
  color: #fff;
  transform: scale(0.95);
}

.delete-btn {
  color: #ff4d4f;
  font-size: 36rpx;
  margin-left: 10rpx;
  transition: all 0.3s ease;
}

.delete-btn:active {
  transform: scale(1.2);
}

.save-btn {
  position: fixed;
  left: 40rpx;
  right: 40rpx;
  bottom: 60rpx;
  z-index: 999;
  width: auto;
  height: 100rpx;
  background: #4A90E2;
  color: #fff;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(74, 144, 226, 0.3);
  transition: all 0.3s ease;
  box-sizing: border-box;
  margin: 0; /* 悬浮时不需要 margin */
}

.save-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 10rpx rgba(74, 144, 226, 0.3);
} 