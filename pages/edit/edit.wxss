.container {
  padding: 32rpx;
  background-color: #f5f5f5;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 0;
}

.edit-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx 60rpx 60rpx 60rpx;
  width: 100%;
  box-sizing: border-box;
  min-height: 360rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
}

/* 特殊处理技能和爱好section的高度 */
.edit-section.skills-section,
.edit-section.hobbies-section {
  max-height: 600rpx; /* 设置最大高度 */
  overflow: hidden; /* 防止内容溢出 */
}

/* 使用组合选择器设置相邻edit-section之间的间距 */
.edit-section + .edit-section {
  margin-top: 15rpx;
}

/* 最后一个section不需要分隔线，但需要更大的底部间距 */
.edit-section:last-child {
  margin-bottom: 320rpx;
}

.edit-section-hover {
  background: #fafafa;
}

/* 所有section header的基础样式 */
.section-header,
.custom-block-header {
  flex-shrink: 0; /* 防止标题被压缩 */
  margin-bottom: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-content {
  width: 100%;
  padding: 12rpx 0;
  position: relative;
}

/* 统一处理所有需要文本输入的section内容区域 */
.edit-section .section-content.text-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0; /* 确保flex子元素可以正确滚动 */
  padding-bottom: 0;
}

/* 统一处理所有textarea */
.edit-section .section-content.text-content textarea {
  flex: 1;
  width: 100%;
  min-height: 240rpx;
  max-height: 400rpx;
  padding: 16rpx 0;
  padding-bottom: 0;
  margin-bottom: 0;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 16rpx;
}

.form-item:last-child {
  margin-bottom: 0;
  border-bottom: none;
}

.label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.input-focus {
  color: #1989fa;
}

.textarea {
  width: 100%;
  min-height: 240rpx;
  max-height: 400rpx;
  padding: 16rpx 0;
  padding-bottom: 0; /* 移除底部padding */
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  margin-bottom: 0; /* 确保没有底部边距 */
}

.textarea-focus {
  color: #1989fa;
}

.skills-input {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  position: relative;
  gap: 16rpx; /* 使用gap控制间距 */
}

/* 调整输入框宽度，为计数器和按钮留出空间 */
.skills-input .input {
  flex: 1;
  max-width: calc(100% - 180rpx); /* 调整为更合适的宽度 */
  font-size: 28rpx;
  color: #333;
  background: #f9f9f9;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

/* 调整标签计数器位置 */
.tags-counter {
  font-size: 24rpx;
  color: #999;
  min-width: 60rpx; /* 确保数字显示完整 */
  text-align: center;
  margin: 0 4rpx; /* 微调间距 */
}

.tags-counter.warning {
  color: #ff9900;
}

.tags-counter.error {
  color: #ff4d4f;
}

/* 优化添加按钮样式 */
.add-btn {
  padding: 12rpx 24rpx; /* 减小左右padding */
  background: #1989fa;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
  white-space: nowrap;
  min-width: 80rpx; /* 减小最小宽度 */
  text-align: center;
}

/* 优化技能列表滚动 */
.skills-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 16rpx 0;
  max-height: 320rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: thin;
  position: relative; /* 确保滚动条在内容上层 */
}

/* 优化滚动条样式 */
.skills-list::-webkit-scrollbar {
  width: 6rpx;
}

.skills-list::-webkit-scrollbar-track {
  background: #f5f5f5;
  border-radius: 3rpx;
}

.skills-list::-webkit-scrollbar-thumb {
  background: #ddd;
  border-radius: 3rpx;
}

.skills-list::-webkit-scrollbar-thumb:hover {
  background: #ccc;
}

.skill-tag {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  max-width: calc(100% - 32rpx); /* 防止标签过长 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  transition: all 0.3s ease;
}

/* 添加标签hover效果的过渡动画 */
.skill-tag-hover {
  background: #e8e8e8;
  transform: scale(0.95);
}

/* 删除按钮样式优化 */
.delete-btn {
  margin-left: 12rpx;
  color: #999;
  font-size: 32rpx;
  padding: 0 8rpx;
  transition: all 0.3s ease;
}

.delete-btn-hover {
  color: #ff4d4f;
  transform: scale(1.1);
}

.add-btn-hover {
  opacity: 0.8;
  transform: scale(0.95);
}

.save-btn {
  position: fixed;
  bottom: 48rpx;
  left: 32rpx;
  right: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #1989fa;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  box-shadow: 0 8rpx 16rpx rgba(25, 137, 250, 0.2);
}

.save-btn-hover {
  opacity: 0.8;
}

.scrollarea {
  height: 100vh;
  background: #f5f5f5;
}

.avatar-content {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

/* 自定义块特殊样式 */
.custom-block-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 删除重复的样式定义 */
.delete-custom-block {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.delete-icon {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

/* 统一的滚动条样式 */
textarea::-webkit-scrollbar {
  width: 6rpx;
}

textarea::-webkit-scrollbar-track {
  background: #f5f5f5;
  border-radius: 3rpx;
}

textarea::-webkit-scrollbar-thumb {
  background: #ddd;
  border-radius: 3rpx;
}

textarea::-webkit-scrollbar-thumb:hover {
  background: #ccc;
}

/* 新增自定义内容按钮样式 */
.add-custom-block {
  background: #fff;
  border-radius: 16rpx;
  margin: 30rpx 0;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #1989fa;
  font-size: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(25, 137, 250, 0.1);
  position: relative;
  overflow: hidden;
  border: 2rpx dashed rgba(25, 137, 250, 0.3);
}

.add-custom-block::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(120deg, transparent, rgba(25, 137, 250, 0.03), transparent);
  background-size: 200% 100%;
  animation: shine 2s infinite;
}

@keyframes shine {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

.add-custom-block-hover {
  opacity: 0.9;
  transform: scale(0.98);
  transition: all 0.3s ease;
}

.add-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
  font-weight: 300;
  color: #1989fa;
}

.add-text {
  font-size: 32rpx;
  color: #1989fa;
  font-weight: 500;
  letter-spacing: 2rpx;
}

