<!--edit.wxml-->
<navigation-bar title="编辑信息" back="{{true}}" color="black" background="#FFF"></navigation-bar>
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="edit-section">
      <view class="section-header">
        <text class="section-title">基本信息</text>
      </view>
      <view class="section-content">
        <view class="form-item">
          <text class="label">姓名</text>
          <input class="input" value="{{name}}" bindinput="onNameInput" placeholder="请输入姓名" />
        </view>
        <view class="form-item">
          <text class="label">职位</text>
          <input class="input" value="{{title}}" bindinput="onTitleInput" placeholder="请输入职位" />
        </view>
      </view>
    </view>

    <view class="edit-section">
      <view class="section-header">
        <text class="section-title">联系方式</text>
      </view>
      <view class="section-content">
        <view class="form-item">
          <text class="label">电话</text>
          <input class="input" value="{{phone}}" bindinput="onPhoneInput" placeholder="请输入电话" />
        </view>
        <view class="form-item">
          <text class="label">邮箱</text>
          <input class="input" value="{{email}}" bindinput="onEmailInput" placeholder="请输入邮箱" />
        </view>
        <view class="form-item">
          <text class="label">地址</text>
          <input class="input" value="{{address}}" bindinput="onAddressInput" placeholder="请输入地址" />
        </view>
      </view>
    </view>

    <view class="edit-section">
      <view class="section-header">
        <text class="section-title">专业技能</text>
      </view>
      <view class="section-content">
        <view class="skills-input">
          <input class="input" value="{{newSkill}}" bindinput="onNewSkillInput" placeholder="添加新技能" />
          <view class="add-btn" bindtap="addSkill">添加</view>
        </view>
        <view class="skills-list">
          <view class="skill-tag" wx:for="{{skills}}" wx:key="index">
            {{item}}
            <text class="delete-btn" bindtap="deleteSkill" data-index="{{index}}">×</text>
          </view>
        </view>
      </view>
    </view>

    <view class="edit-section">
      <view class="section-header">
        <text class="section-title">兴趣爱好</text>
      </view>
      <view class="section-content">
        <view class="skills-input">
          <input class="input" value="{{newHobby}}" bindinput="onNewHobbyInput" placeholder="添加新爱好" />
          <view class="add-btn" bindtap="addHobby">添加</view>
        </view>
        <view class="skills-list">
          <view class="skill-tag" wx:for="{{hobbies}}" wx:key="index">
            {{item}}
            <text class="delete-btn" bindtap="deleteHobby" data-index="{{index}}">×</text>
          </view>
        </view>
      </view>
    </view>

    <view class="edit-section">
      <view class="section-header">
        <text class="section-title">个人简介</text>
      </view>
      <view class="section-content">
        <textarea class="textarea" value="{{about}}" bindinput="onAboutInput" placeholder="请输入个人简介" />
      </view>
    </view>
  <view style="min-height: 160rpx; height: 160rpx; flex-shrink: 0;"></view>
  </view>
</scroll-view> 
<view class="save-btn" bindtap="saveChanges">保存修改</view>