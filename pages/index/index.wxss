/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f7fa;
  font-family: system-ui, -apple-system;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  padding-top: 0rpx;
  padding-bottom: 0rpx; /* 新增，底部留白 */
}

.container {
  padding: 20rpx;
  display: flex;
  justify-content: center;
  min-height: 100%;
}

.card {
  width: 90%;
  background: #fff;
  border-radius: 30rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  margin-top: 0rpx;
  margin-bottom: 140rpx;  /* 添加这一行，确保滚动到底时内容完全可见 */
  
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  min-height: auto;
  
  transform: translateY(0);
  transition: all 0.3s ease;
}

/* 替换 .card:active 为 hover-class */
.card-hover {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.avatar-container {
  position: relative;
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

/* 替换 .avatar:active 为 hover-class */
.avatar-hover {
  transform: scale(0.98);
}

.info {
  text-align: center;
}

.name-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.name {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  letter-spacing: 2rpx;
}

.title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.divider {
  height: 2rpx;
  background: linear-gradient(to right, transparent, #4A90E2, transparent);
  margin: 30rpx 0;
}

.contact {
  margin: 20rpx 0;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 12rpx;
  margin: 6rpx 0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

/* 替换 .contact-item:active 为 hover-class */
.contact-item-hover {
  background: #f5f7fa;
  transform: scale(0.98);
}

.icon-container {
  width: 60rpx;
  height: 60rpx;
  background: #f0f4ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.contact-icon {
  width: 32rpx;
  height: 32rpx;
}

.contact-info {
  flex: 1;
  text-align: left;
}

.contact-label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 4rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.iconfont {
  color: #4A90E2;
  font-size: 40rpx;
}

.skills-section {
  margin-top: 20rpx;
}

.skills {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  background: #fcfcfc;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

/* 为技能标签添加间距 */
.skills .skill-tag {
  margin: 0 10rpx 20rpx 10rpx;
}

.skill-tag {
  background: #f0f4ff;
  color: #333333;
  padding: 12rpx 32rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

/* 替换 .skill-tag:active 为 hover-class */
.skill-tag-hover {
  background: #4A90E2;
  color: #fff;
  transform: scale(0.95);
}

.about-section {
  margin-top: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.about-content {
  text-align: left;
  color: #666;
  font-size: 28rpx;
  line-height: 1.6;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
}

/* 为文字块添加样式 */
.text-block {
  margin-top: 30rpx; /* 顶部间距 */
}

/* 自定义块样式 */
.custom-block-section {
  margin-top: 40rpx; /* 增加自定义块间的间距 */
  display: flex;
  flex-direction: column;
}

/* 复用 section-title 样式 */
.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

/* 复用 about-content 样式，添加一些特定的调整 */
.custom-block-section .about-content {
  margin-bottom: 10rpx; /* 减小底部间距 */
}

/* 确保最后一个自定义块没有多余的底部间距 */
.custom-block-section:last-child .about-content {
  margin-bottom: 0;
}

.hobbies-section {
  margin-top: 20rpx;
}

.hobbies {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  background: #fcfcfc;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

/* 为爱好标签添加间距 */
.hobbies .hobby-tag {
  margin: 0 10rpx 20rpx 10rpx;
}

.hobby-tag {
  background: #f0f4ff;
  color: #333333;
  padding: 12rpx 32rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

/* 替换 .hobby-tag:active 为 hover-class */
.hobby-tag-hover {
  background: #4A90E2;
  color: #fff;
  transform: scale(0.95);
}

/* 导航栏标题居中样式 */
.navigation-bar__title {
  width: 100% !important;
  text-align: center !important;
  left: 0 !important;
  right: 0 !important;
}

/* 底部悬浮按钮样式 */
.float-buttons {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 100;
}

.float-btn-group {
  display: flex;
  align-items: center;
  background: #4A90E2;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 16rpx rgba(74, 144, 226, 0.3);
  padding: 0;
}

.float-btn {
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx;
  transition: all 0.3s ease;
}

.divider-line {
  width: 2rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0;
}

.btn-hover {
  opacity: 0.8;
}

.btn-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.float-btn text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

/* 删除原来的单独按钮背景色样式 */
.float-btn.edit, .float-btn.share {
  background: transparent;
  box-shadow: none;
}