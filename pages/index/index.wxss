/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f7fa;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  padding-top: 0rpx;
  padding-bottom: 0rpx; /* 新增，底部留白 */
}

.container {
  padding: 20rpx;
  display: flex;
  justify-content: center;
  min-height: 100%;
}

.card {
  width: 90%;
  background: #fff;
  border-radius: 30rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  margin-top: 0rpx;
  
  display: flex; /* 添加这一行 */
  flex-direction: column; /* 添加这一行 */
  justify-content: flex-start; /* 添加这一行，确保内容从顶部开始排列 */
  min-height: auto; /* 确保背景面板至少占据100%的高度 */
  
  transform: translateY(0);
  transition: all 0.3s ease;
}

.card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.avatar-container {
  position: relative;
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.avatar:active {
  transform: scale(0.98);
}

.info {
  text-align: center;
}

.name-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.name {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  letter-spacing: 2rpx;
}

.title {
  font-size: 32rpx;
  color: #4A90E2;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.social-links {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin: 20rpx 0;
}

.social-item {
  width: 60rpx;
  height: 60rpx;
  background: #f0f4ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.social-item:active {
  transform: scale(0.9);
  background: #4A90E2;
}

.social-item .iconfont {
  color: #4A90E2;
  font-size: 36rpx;
}

.social-item:active .iconfont {
  color: #fff;
}

.divider {
  height: 2rpx;
  background: linear-gradient(to right, transparent, #4A90E2, transparent);
  margin: 30rpx 0;
}

.contact {
  margin: 30rpx 0;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin: 10rpx 0;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.contact-item:active {
  background: #f5f7fa;
  transform: scale(0.98);
}

.icon-container {
  width: 80rpx;
  height: 80rpx;
  background: #f0f4ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.contact-info {
  flex: 1;
  text-align: left;
}

.contact-label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 4rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.contact-action {
  width: 60rpx;
  height: 60rpx;
  background: #f0f4ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  transition: all 0.3s ease;
}

.contact-action:active {
  background: #4A90E2;
}

.contact-action .iconfont {
  color: #4A90E2;
  font-size: 32rpx;
}

.contact-action:active .iconfont {
  color: #fff;
}

.iconfont {
  color: #4A90E2;
  font-size: 40rpx;
}

.skills-section {
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.skills {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20rpx;
}

.skill-tag {
  background: #f0f4ff;
  color: #4A90E2;
  padding: 12rpx 32rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.skill-tag:active {
  background: #4A90E2;
  color: #fff;
  transform: scale(0.95);
}

.about-section {
  margin-top: 20rpx; /* 确保与上方内容有间距 */
  flex: 1; /* 使其自适应高度 */
  display: flex; /* 添加这一行 */
  flex-direction: column; /* 添加这一行 */
}

.about-content {
  text-align: left;
  color: #666;
  font-size: 28rpx;
  line-height: 1.6;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
}

/* 编辑按钮样式 */
.edit-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  transition: all 0.3s ease;
}

.edit-btn .iconfont {
  color: #fff;
  font-size: 36rpx;
}

.edit-btn:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.3);
}

.edit-btn .edit-icon {
  width: 36rpx;
  height: 36rpx;
}

.hobbies-section {
  margin-top: 20rpx;
}

.hobbies {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20rpx;
}

.hobby-tag {
  background: #f0f4ff;
  color: #4A90E2;
  padding: 12rpx 32rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.hobby-tag:active {
  background: #4A90E2;
  color: #fff;
  transform: scale(0.95);
}
